<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TPolice.Activity.TpoliceCircularPdf">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tpcp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/TpoliceThemColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <Button
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:paddingLeft="35dp"
            android:layout_gravity="right"
            android:id="@+id/tpcp_download"
            android:background="@android:color/transparent"
            app:drawableStartCompat="@drawable/ic_save" />
    </androidx.appcompat.widget.Toolbar>
    <com.github.barteksc.pdfviewer.PDFView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/circular_pdf"/>

</LinearLayout>