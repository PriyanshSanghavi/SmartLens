<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/fbg_style"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:textColor="#FFFFFF"
        android:text="@string/sign_in"
        android:textSize="18dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/driver"
        android:layout_below="@+id/signin"
        android:id="@+id/limg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Driver"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:id="@+id/tv1"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/limg"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:drawableStart="@drawable/ic_email"
        android:drawableTint="#FFFFFF"
        android:drawablePadding="10dp"
        android:paddingRight="20dp"
        android:textColor="#FFFFFF"
        android:id="@+id/dl_email"
        android:background="@drawable/et_style"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:id="@+id/tv2"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#FFFFFF">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:drawableStart="@drawable/ic_lock"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:id="@+id/dl_password"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/et_style"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot Password?"
        android:textSize="18dp"
        android:id="@+id/dl_fpassword"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/password"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dl_signin"
        android:text="SIGN IN"
        android:layout_below="@+id/fpassword"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/btn_style"
        android:textColor="@color/DriverThemColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dl_signup"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="20dp"/>
</LinearLayout>