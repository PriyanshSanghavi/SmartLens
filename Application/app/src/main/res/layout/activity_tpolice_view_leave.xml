<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tpvl_rl"
    tools:context=".TPolice.Activity.TpoliceViewLeave">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tpvl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/TpoliceThemColor"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/tpvl_toolbar"
            android:id="@+id/tpvl_from_date"
            android:background="@color/TpoliceThemColor"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:text="From Date"
            android:drawableLeft="@drawable/ic_date"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="#FFFFFF"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tpvl_to_date"
            android:layout_below="@+id/tpvl_toolbar"
            android:background="@color/TpoliceThemColor"
            android:textColor="#FFFFFF"
            android:text="To Date"
            android:drawableLeft="@drawable/ic_date"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_style3"
            android:text="SHOW"
            android:textColor="#FFFFFF"
            android:layout_margin="16dp"
            android:id="@+id/tpvl_show"
            android:layout_below="@+id/tpvl_from_date"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tpvl_show"
            android:id="@+id/tpvl_lv"/>

</RelativeLayout>