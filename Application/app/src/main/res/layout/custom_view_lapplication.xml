<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/times_new_roman"
        android:text="Leave Type :"
        android:textStyle="bold"
        android:id="@+id/tpvl_leavetype"
        android:textSize="23dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_new_roman"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:text="Permission"
        android:id="@+id/tpvl_permission"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_new_roman"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="From Date:"
        android:textSize="20dp"
        android:layout_below="@+id/tpvl_leavetype"
        android:id="@+id/tpvl_tv1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_new_roman"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="02/02/2021"
        android:textSize="20dp"
        android:layout_below="@+id/tpvl_tv1"
        android:id="@+id/tpvl_fromdate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_new_roman"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:text="To Date:"
        android:textSize="20dp"
        android:layout_below="@+id/tpvl_leavetype"
        android:id="@+id/tpvl_tv2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dp"
        android:fontFamily="@font/times_new_roman"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:text="04/02/2021"
        android:textSize="20dp"
        android:layout_below="@+id/tpvl_tv2"
        android:id="@+id/tpvl_todate"/>

</RelativeLayout>